generator eventcenterclient {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/catering"
}

datasource banquestproeventsdb {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// event centers

model Catering {
  id                 String        @id @default(uuid()) // Primary key
  name               String
  eventTypes         String[]
  serviceProviderId  String // owner of this service points to a userid 
  tagLine            String
  depositAmount      Int
  startPrice         Float
  minCapacity        Int?  //minimum count of people the catering service can handle
  maxCapacity        Int?  //maximum count of people the catering service can handle
  description        String?
  dishTypes          String[]
  cuisine            String[]
  images             String[]
  termsOfUse         String
  cancellationPolicy String
  streetAddress      String
  streetAddress2     String
  city               String
  location           String // list of locations this catering service should be listed at
  postal             String
  status             ServiceStatus
  isFeatured         Boolean @default(false)
  featureExpiringAt  DateTime?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  updatedBy          String?     
  deletedAt          DateTime?
  deletedBy          String?
  rating             Int?
  paymentRequired   Boolean? @default(false)
  contact            String?
  // relations
  menu              Menu[]

  @@index([serviceProviderId])
  @@index([status])
  @@index([name])
  @@index([rating])
  @@index([location])
  @@index([cuisine])
  @@index([startPrice])
}

model Menu {
  id               String     @id @default(uuid())
  cateringId       String
  name             String
  description      String?
  images           String[] // array to store the image url
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  updatedBy          String?     
  deletedAt          DateTime?
  deletedBy          String?

  // Relationships
  cateringService   Catering @relation(fields: [cateringId], references: [id])
  @@index([description])
}



enum ServiceStatus {
  ACTIVE
  INACTIVE
}
